# find and kill port
findandkill() {
  port=$(lsof -n -i4TCP:$1 | grep LISTEN | awk '{ print $2 }')
  if [ -z "$port" ]
  then
    echo "No process found on port $1"
  else
    echo "Killing process $port"
    kill -9 $port
  fi
}

alias killport=findandkill
